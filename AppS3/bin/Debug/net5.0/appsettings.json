{
  "ConnectionStrings": {
    "DatabaseConnection": "Server=localhost;Port=3306;Database=apps3db;Uid=root;Pwd=1234;"
  },

  "JwtOptions": {
    "SecretKey": "TypeSomeStringYouWant",
    "Audience": "https://localhost:5001/",
    "Issuer": "https://localhost:5001/",
    "ExpireTimeInSeconds": 60
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": ".\\Log\\Log-.json",
          "rollingInterval": "Day",
          "restrictedToMinimumLevel": "Information",
          "outputTemplate": "{Timestamp:HH:mm:ss} [{Level}] {Message}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
